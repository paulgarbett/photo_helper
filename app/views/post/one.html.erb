

<h1><%=@post.title %></h1>
<h3><%=@post.camera %></h3>
<p><%=@post.desc %></p><br><br>
      
<!--adding in comments -->

  <br><h4>Comments</h4>
<%@post.comments.each do |c| %>
	<div><strong><%=c.author %></strong></div>
	<div><%=c.comment %></div>
<% end %>

<h2>New Comment</h2>

<%= form_for(@comment ,:url => {:action => :new_comment, controller => :one} ) do |f| %>

	 <!--ties comment to correct post-->
  <%= hidden_field_tag :post_id, @post.id %>

		<div class="field">
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </div>
    <div class="field">
      <%= f.label :comment %><br>
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>