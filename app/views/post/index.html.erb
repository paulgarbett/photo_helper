<h1>Welcome to the Gallery</h1>

<table>
<thead>
	<tr>
		<th>Camera</th>
		<th>Title</th>
		<th>Description</th>
	</tr>
</thead>
<%@posts.each do |p| %>
	<tr>
		<td><%=p.camera%></td>
		<td><%=p.title%></td>
		<td><%=p.desc%></td>
		<td><%= link_to 'Show', one_path(:post => p.id) %></td>
	</tr>
<% end %>
</table>

<!-- Link to create new entries -->
<%= link_to 'Submit a Photo', entry_path %>