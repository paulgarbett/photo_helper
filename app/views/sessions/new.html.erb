<h1>Log In</h1>

<%= form_for @user, {url: sessions_path} do |l| %>
  <div class="field">
    <%= l.label :email %><br />
    <%= l.text_field :email %>
  </div>
  <div class="field">
    <%= l.label :password %><br />
    <%= l.password_field :password %>
  </div>
  <div class="actions"><%= l.submit "Log In" %></div>
<% end %>